# Minimal board configuration for MCUboot child image
# Override the main board defconfig to disable unnecessary peripherals

# Hardware Protection (keep from main board)
CONFIG_ARM_MPU=y
CONFIG_HW_STACK_PROTECTION=y

# Essential Hardware Peripherals for MCUboot only
CONFIG_GPIO=y
CONFIG_GPIO_NRFX=y

# DISABLE all peripherals not needed by bootloader
CONFIG_ADC=n
CONFIG_ADC_NRFX_SAADC=n
CONFIG_SPI=n
CONFIG_SPI_NRFX=n
CONFIG_SENSOR=n
CONFIG_I2C=n

# Hardware Limitations (keep from main board)
CONFIG_UART_NRFX=n
CONFIG_UART_CONSOLE=n

# Default Console (RTT) - disable for minimal bootloader
CONFIG_USE_SEGGER_RTT=n
CONFIG_RTT_CONSOLE=n
CONFIG_CONSOLE=n
