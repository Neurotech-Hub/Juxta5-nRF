# Enable MPU and stack protection
CONFIG_ARM_MPU=y
CONFIG_HW_STACK_PROTECTION=y

# Enable GPIO
CONFIG_GPIO=y

# Enable SPI
CONFIG_SPI=y
CONFIG_SPI_NRFX=y

# Enable ADC
CONFIG_ADC=y
CONFIG_ADC_NRFX_SAADC=y

# Enable RTC
CONFIG_RTC=y
CONFIG_COUNTER=y

# Enable FRAM support
# EEPROM drivers not needed - using custom FRAM library
CONFIG_EEPROM=n
CONFIG_EEPROM_AT25=n